<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Time</th>
      <th>Author</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% Event.all.each do |f| %>
      <tr>
        <td><%= f.description %></td>
        <td><%= f.event_date %></td>
        <td><%= f.user.name %></td>
        <td><%= link_to "Show", @event %></td>
        <td><%= link_to "Edit", edit_event_path(f)  %></td>
        <td><%= link_to "Destroy", event_path(f), method: :delete, data: { confirm: "Are you sure?" }  %></td>        

      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="btn-group">
<%= link_to "New Event", new_event_path, :class => "btn"%>
</div>